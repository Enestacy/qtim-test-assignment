{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^db/(.*)$": "<rootDir>/../db/$1"
  },
  "modulePaths": ["<rootDir>/../"],
  "testTimeout": 30000,
  "forceExit": true,
  "detectOpenHandles": true
}
